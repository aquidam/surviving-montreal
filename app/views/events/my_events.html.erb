<%# app/views/events/my_events.html.erb %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Events</title>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h2>Events I'm Attending</h2>
      </div>
    </div>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-12 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= event.user.first_name %></h6>
              <p class="card-text"><%= event.description %></p>
              <div class="mb-3">
                <% event.images.each do |image| %>
                  <%= cl_image_tag image.key, class: "img-fluid", style: "height: 200px; width: 100%; object-fit: cover;" %>
                <% end %>
              </div>
              <p><strong>Location:</strong> <%= event.location %></p>
              <p><strong>Date:</strong> <%= event.event_date %></p>
              <p><strong>Number of People:</strong> <%= event.number_of_people %> attending</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
