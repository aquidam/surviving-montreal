<%# app/views/articles/show.html.erb %>
  <div class="container">
    <div class="row">
      <div class="col-12 mb-3">
        <div class="card rounded-border">
          <div class="card-body">
            <h5 class="card-title"><%= @article.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">By: <%= "#{@article.user.first_name} #{@article.user.last_name}" %></h6>
            <p class="card-paragraph"><%= @article.description %></p>
            <% @article.images.each do |image| %>
              <div class="mb-2">
                <%= cl_image_tag image.key, class: "img-fluid rounded-border", style: "height: 200px; width: 100%; object-fit: cover;" %>
              </div>
            <% end %>
              <div class="d-flex justify-content-end">
                <%= link_to bookmark_article_path(@article), method: :post, remote: true, class: 'btn btn-link p-0', data: { turbo_method: :post } do %>
                  <i class="fa-solid fa-bookmark"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- Comments Section -->
<div class="container">
  <div class="row">
    <div class="col-12 mb-3">
      <div class="card rounded-border">
        <div class="card-body">
          <h3 class="card-title">Comments</h3>
          <div id="comments">
            <%= render @article.comments %>
          </div>
          <div class="text-end">
            <button id="toggleCommentForm" class="btn btn-link" style="text-decoration: none;">
              <i class="fa-solid fa-comment"></i>
            </button>
          </div>
          <div id="commentFormContainer" class="highlight p-3 mt-3" style="display: none;">
            <%= render partial: 'comments/form', locals: { article: @article } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_tag do %>
  document.addEventListener("turbo:load", function() {
    // Toggle comment form visibility when clicking the button
    const toggleButton = document.getElementById('toggleCommentForm');
    const commentFormContainer = document.getElementById('commentFormContainer');

    if (toggleButton) {
      toggleButton.addEventListener('click', function() {
        if (commentFormContainer.style.display === 'none' || commentFormContainer.style.display === '') {
          commentFormContainer.style.display = 'block';
          commentFormContainer.scrollIntoView({ behavior: 'smooth' });
        } else {
          commentFormContainer.style.display = 'none';
        }
      });
    }
  });

  // Collapse the form after posting the comment
  document.addEventListener('turbo:submit-end', function(event) {
    if (event.target.closest('#new_comment_form')) {
      // Hide the form after a successful post
      document.getElementById('commentFormContainer').style.display = 'none';
      document.querySelector('#new_comment_form').reset();  // Reset the form
    }
  });
<% end %>
