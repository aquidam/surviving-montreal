<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>Post An Article</h1>
      <%= form_with model: @article, local: true, class: "needs-validation", novalidate: true do |f| %>
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control text-input", required: true %>
          <div class="invalid-feedback">
            Please provide a title.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :description, class: "form-label" %>
          <%= f.text_area :description, class: "form-control text-input", rows: 5, required: true %>
          <div class="invalid-feedback">
            Please provide a description.
          </div>
        </div>
        <div class="mb-3">
          <%= f.label :Upload_Image, class: "form-label" %>
          <%= f.file_field :images, class: "form-control text-input", multiple: true %>
          <div class="invalid-feedback">
            Please provide an image URL.
          </div>
        </div>
        <div class="button-styling">
          <%= f.submit "Post Article", class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>
